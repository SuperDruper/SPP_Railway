<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-configuration PUBLIC
        "-//Hibernate/Hibernate Configuration DTD//EN"
        "http://www.hibernate.org/dtd/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
        <session-factory>
                <property name="connection.url">jdbc:mysql://localhost:3306/railway</property>
                <property name="connection.driver_class">com.mysql.jdbc.Driver</property>
                <property name="hibernate.dialect">
                        org.hibernate.dialect.MySQLDialect
                </property>
                <property name="hibernate.connection.username">
                        railwayDB
                </property>
                <property name="hibernate.connection.password">
                        railwayPassword
                </property>
                <property name="hibernate.connection.pool_size">10</property>
                <property name="show_sql">true</property>
                <property name="hibernate.hbm2ddl.auto">update</property>


                <mapping class="org.apache.struts.model.Distance"/>
                <mapping class="org.apache.struts.model.Race"/>
                <mapping class="org.apache.struts.model.RaceStation"/>
                <mapping class="org.apache.struts.model.Role"/>
                <mapping class="org.apache.struts.model.Route"/>
                <mapping class="org.apache.struts.model.Station"/>
                <mapping class="org.apache.struts.model.Ticket"/>
                <mapping class="org.apache.struts.model.Train"/>
                <mapping class="org.apache.struts.model.TrainType"/>
                <mapping class="org.apache.struts.model.User"/>


        </session-factory>
</hibernate-configuration>