<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE struts PUBLIC
        "-//Apache Software Foundation//DTD Struts Configuration 2.3//EN"
        "http://struts.apache.org/dtds/struts-2.3.dtd">

<struts>

    <constant name="struts.enable.DynamicMethodInvocation" value="false"/>
    <constant name="struts.devMode" value="true"/>
    <!--<constant name="struts.convention.default.parent.package" value="angularstruts"/>-->

    <constant name="struts.mapper.class" value="org.apache.struts2.dispatcher.mapper.Restful2ActionMapper" />

    <constant name="struts.enable.SlashesInActionNames" value="true" />
    <constant name="struts.mapper.alwaysSelectFullNamespace" value="false" />


    <package name="def" extends="struts-default, json-default">
        <default-interceptor-ref name="defaultStack">

        </default-interceptor-ref>
        <default-action-ref name="index"/>

        <action name="index" class="code.controller.IndexAction">
            <result name="success">/index.jsp</result>
        </action>
    </package>


    <package name="api" extends="def" namespace="/api">

        <!-- GET EXAMPLE -->
        <action name="user/list" class="code.controller.user.UserListShowingAction">
            <interceptor-ref name="json" />

            <result type="json">
                <param name="excludeProperties">
                    ^users\[\d+\]\.tickets,
                    ^users\[\d+\]\.role\.users
                </param>
                <param name="noCache">true</param>
            </result>
        </action>

        <!-- POST EXAMPLE -->
        <action name="user/register" class="code.controller.user.RegisterAction">
            <interceptor-ref name="json"></interceptor-ref>

            <result type="json">
                <param name="excludeProperties" >
                    ^user
                </param>
                <param name="noCache">true</param>
            </result>
        </action>


        <action name="user/login" class="code.controller.user.LoginAction">
            <interceptor-ref name="json"/>

            <result type="json">
                <param name="excludeProperties" >
                    ^login,
                    ^password
                </param>
                <param name="noCache">true</param>
            </result>
        </action>

        <!--POST-->
        <action name="train_type/update" class="code.controller.trainType.UpdateAction">
            <interceptor-ref name="defaultStack"/>
            <interceptor-ref name="json">
                <param name="excludeProperties">
                    ^trainTypes\[\d+\]\.trains
                </param>
            </interceptor-ref>

            <result type="json">
                <param name="excludeProperties" >

                </param>
                <param name="noCache">true</param>
            </result>
        </action>
        <!--GET-->
        <action name="train_type/crud" class="code.controller.trainType.TrainTypeListShowingAction">
            <interceptor-ref name="json" />

            <result type="json">
                <param name="excludeProperties">
                    ^trainTypes\[\d+\]\.trains
                </param>
                <param name="noCache">true</param>
            </result>
        </action>

        <!--GET-->
        <action name="train/crud" class="code.controller.train.TrailListShowingAction">
            <interceptor-ref name="json" />

            <result type="json">

                <param name="excludeProperties" >
                    ^trains\[\d+\]\.races,
                    ^trains\[\d+\]\.trainType\.trains,

                    ^trainTypes\[\d+\]\.trains
                </param>
                <param name="noCache">true</param>
            </result>
        </action>
        <!--POST-->
        <action name="train/update" class="code.controller.train.UpdateAction">
            <interceptor-ref name="defaultStack"/>
            <interceptor-ref name="json">
                <param name="excludeProperties">
                    <!--^trainTypes\[\d+\]\.trains-->
                </param>
            </interceptor-ref>

            <result type="json">
                <param name="excludeProperties" >

                </param>
                <param name="noCache">true</param>
            </result>
        </action>

        <!--GET-->
        <action name="role/crud" class="code.controller.role.RoleListShowingAction">
            <interceptor-ref name="json" />

            <result type="json">
                <param name="excludeProperties">
                    ^roles\[\d+\]\.users
                </param>
                <param name="noCache">true</param>
            </result>
        </action>
        <!--POST-->
        <action name="role/update" class="code.controller.role.UpdateAction">
            <interceptor-ref name="defaultStack"/>
            <interceptor-ref name="json">
                <param name="excludeProperties">
                    <!--^trainTypes\[\d+\]\.trains-->
                </param>
            </interceptor-ref>

            <result type="json">
                <param name="excludeProperties" >
                    ^roles\[\d+\]\.users
                </param>
                <param name="noCache">true</param>
            </result>
        </action>

        <!--GET-->
        <action name="race/crud" class="code.controller.race.RaceListShowingAction">
            <interceptor-ref name="json" />

            <result type="json">
                <param name="excludeProperties">
                    
                    <!--^races\[\d+\]\.route,-->
                    <!--^races\[\d+\]\.route\.races,-->
                    <!--^races\[\d+\]\.train,-->
                    <!--^races\[\d+\]\.train\.races,-->
                    <!--^races\[\d+\]\.train\.trainType,-->
                    <!--^races\[\d+\]\.raceStations,-->
                    <!--^races\[\d+\]\.raceStations\.race,-->
                    <!--^races\[\d+\]\.raceStations\.station,-->
                    <!--^races\[\d+\]\.tickets,-->
                    <!--^races\[\d+\]\.tickets\.race,-->
                    <!--^races\[\d+\]\.tickets\.user,-->
                    <!--^routes\[\d+\]\.races,-->
                    <!--^trains\[\d+\]\.races,-->
                    <!--^trains\[\d+\]\.trainType-->
                </param>
                <param name="noCache">true</param>
            </result>
        </action>
        <!--POST-->
        <action name="race/update" class="code.controller.race.UpdateAction">
            <interceptor-ref name="defaultStack"/>
            <interceptor-ref name="json">
                <param name="excludeProperties">
                    <!--^trainTypes\[\d+\]\.trains-->
                </param>
            </interceptor-ref>

            <result type="json">
                <param name="excludeProperties" >
                    ^races\[\d+\]\.*,
                    ^races\[\d+\]\.route,
                    ^races\[\d+\]\.route\.races,
                    ^races\[\d+\]\.train,
                    ^races\[\d+\]\.train\.races,
                    ^races\[\d+\]\.train\.trainType,
                    ^races\[\d+\]\.raceStations,
                    ^races\[\d+\]\.raceStations\.race,
                    ^races\[\d+\]\.raceStations\.station,
                    ^races\[\d+\]\.tickets,
                    ^races\[\d+\]\.tickets\.race,
                    ^races\[\d+\]\.tickets\.user,
                    ^routes\[\d+\]\.races,
                    ^trains\[\d+\]\.races,
                    ^trains\[\d+\]\.trainType
                </param>
                <param name="noCache">true</param>
            </result>
        </action>

        <!--GET-->
        <action name="route/crud" class="code.controller.route.RouteListShowingAction">
            <interceptor-ref name="json" />

            <result type="json">
                <param name="excludeProperties">
                    ^races\[\d+\]\.route\.races,
                    ^races\[\d+\]\.train\.races,
                    ^races\[\d+\]\.train\.trainType,
                    ^races\[\d+\]\.raceStations,
                    ^races\[\d+\]\.tickets,

                    ^routes\[\d+\]\.races
                    <!--^routes\[\d+\]\.races\.raceStations,-->
                    <!--^routes\[\d+\]\.races\.tickets,-->
                    <!--^routes\[\d+\]\.races\.route,-->
                    <!--^routes\[\d+\]\.races\.train-->
                </param>
                <param name="noCache">true</param>
            </result>
        </action>
        <!--POST-->
        <action name="route/update" class="code.controller.route.UpdateAction">
            <interceptor-ref name="defaultStack"/>
            <interceptor-ref name="json">
                <param name="excludeProperties">
                    <!--^trainTypes\[\d+\]\.trains-->
                </param>
            </interceptor-ref>

            <result type="json">
                <param name="excludeProperties" >
                    ^roles\[\d+\]\.users
                </param>
                <param name="noCache">true</param>
            </result>
        </action>

    </package>

    <!--<package name="angularstruts" extends="def, api" />-->
</struts>